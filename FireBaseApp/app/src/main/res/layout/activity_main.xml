<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/title"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/edit_description_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/description"
        android:inputType="text"
        android:minHeight="48dp"
        tools:ignore="VisualLintTextFieldSize"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/load_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/delete_title_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteTitle"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/delete_desc_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteDesc"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <Button
        android:id="@+id/delete_note_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteNote"
        android:layout_marginHorizontal="10dp"
        tools:ignore="VisualLintButtonSize" />

    <TextView
        android:id="@+id/textview_content_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />


</LinearLayout>